{% set characterArt = entry.characterArt.one() %}
{% if characterArt %}
    {% set transform = 
        [
            {
                asset: characterArt,
                transform: {
                    width: 350,
                    height: 600,
                    mode: 'fit',
                    format: 'avif'
                }
            }      
        ]
     %}

    {% set class = {
        class: 'character',
    } %}

    {% set attributes = {
        quality: 90,
    } %}

    {{ craft.images.pictureMultiple(transform, class, attributes) }}
{% endif %}
